      </form>
      <% if (user) { %>
      <a href="/addnew" id="addnew">添加新活动</a>
      <% } %>
      <ul class="nav-right">
        <% if (user) { %>
        <li><a href="" id="username"><%= user.username %></a></li>
        <li><a href="/logout">退出</a></li>
        <% } else { %>
        <li><a href="/reg">注册</a></li>
        <li><a href="/login">登陆</a></li>
        <% } %>
      </ul>
